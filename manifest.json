{
    "manifest_version": 3,
    "name": "Language Keyboard",
    "version": "0.1.0",
    "description": "Teclado de traducci√≥n en tiempo real",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
  
    "background": {
      "service_worker": "background.js"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"],
        "css": ["overlay/styles.css"]
      }
    ],
  
    "action": {
      "default_icon": "public/icon.png"
    },
  
    "icons": {
      "128": "public/icon.png"
    }
  }
  