{
  "manifest_version": 3,
  "name": "Slug Translate",
  "version": "1.0.0",
  "description": "Translate selected text inline (ENâ‡„ES).",
  "permissions": [],
  "host_permissions": [
    "https://libretranslate.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["overlay/styles.css"]
    }
  ],
  "commands": {
    "open-translate": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Translate highlighted text"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
